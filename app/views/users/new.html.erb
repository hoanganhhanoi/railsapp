<!-- Set title, button-text -->
<% provide(:title, 'Dang ki') %>
<% provide(:button_text, 'Tao tai khoan') %>

<div class="signup">
  <h1>Dang ki </h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
      
        <%= render 'fields', f:f %>
        
        <%= f.submit yield(:button_text), class: "btn btn-primary btn-signup" %>
      <% end %>
  </div>
</div>